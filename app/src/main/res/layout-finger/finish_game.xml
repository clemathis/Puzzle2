<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/nicely_done"
        android:layout_marginTop="95dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/nicely_done" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"
        android:hint="@string/Nickname_newgame"
        android:id="@+id/name"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="15dp"
        android:text="@string/congrats"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/NewGameButton"
        android:id="@+id/newgame_button"
        android:background="#fff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:longClickable="false"
        android:textColor="#000000"
        android:onClick="newgame"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/QuitButton"
        android:id="@+id/quit_button"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>